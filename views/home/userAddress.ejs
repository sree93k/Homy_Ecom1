                <div class="innerRight bg-light-tertiary p-4 mt-0">
                  <h2>My Address</h2>
                  
                  <!-- section starting -->
                  <section>
                    <div class="container  ">
                        <div class="row">

                          <table class="table address_tables">
                            <a href="/addAddress"><button type="button" class="btn btn-primary " style="width: auto;">+ Add Address</button></a>

                          </table>
                          
                          <table class="table table-bordered   ">
                         
                              <%
                              if(address.length>0)
                              {

                              for(let i=0;i<address.length;i++)

                              {%>
                                <tr>
                              <td>
                              <div class="container">
                                <div class="row">
                                  <div class="col-8">
                                   <div class="zero">
                                   
                                    <button class="btn btn-success mb-2 p-1" style="width: 80px; height: 30px; "><%=address[i].addressType%></button>
                                   </div>
                                    <div class="firstLine mb-2 ">      
                                      <h5><%=address[i].name%>, &nbsp;<%=address[i].mobile%></h5>                 
                                    </div>
                                    <div class="secondLine">
                                      <p><%=address[i].name%>, &nbsp;<%=address[i].address%> &nbsp; <%=address[i].locality%>,</p>
         
                                    </div>
                                    <div class="thirdLine">
                                      <p><%=address[i].city%>, &nbsp;<%=address[i].state%>, &nbsp;<%=address[i].pincode%>, &nbsp;</p>
                                    </div>
                                    <div class="fourthLine ">
                                      <p>Landmark : <%=address[i].landmark%>, &nbsp;Alternative Mobile :<%=address[i].alterMobile%>, &nbsp;</p>
                                    </div>
                                  </div>
                                  <div class="col-4">
                                    <a href="/editAddress?addressId=<%=address[i]._id%>"><button type="button" class="btn btn-light ms-5 mt-4  mb-3 addressEditBtn">Edit</button><br></a>
                                    <a href="/deleteAddress?userId=<%= userId._id %>&addressId=<%= address[i]._id %>"><button type="button" class="btn btn-light ms-5 addressRemoveBtn">Remove</button><br></a>
                                    
                                  </div>

                                </div>
                              </div>
                             
                            </td>
                          </tr>
                         
                            <%}
                             }%>
                            
                           
                            

                          </table>
                          


                        </div>
                    </div>
                 




                  </section>
                    <!-- section end -->
                </div>
              </div>
              <!-- right end -->
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  



<!-- user logout -->

<script>
  document.getElementById('userLogout')
  .addEventListener('click',()=>{
   
    fetch('/logout',{
      method:'POST',
      headers: {
          "Content-Type": "application/json",
        },
    })
    .then((response) => response.json())
      .then((data) => {
        console.log(data)
        Swal.fire({
          title: "Logout Successfully !",
          icon: "success"
        })
        .then(() => {
          window.location.href = '/';
          });
      })
      .catch((error)=>{
        console.log(error)
      })

  })
</script>






