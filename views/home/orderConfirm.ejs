<section>
<div class="container">
    <h2 class="text-success ">Order Confirmed !</h2>
    <div class="orderConfirmedTop mt-5">
        <div class="container">
            <div class="row" >
                <div class="col-6" style="display: flex; justify-content:center">
                    <div class="card w-75 mb-3">
                        <div class="card-body">
                          <h5 class="card-title">Delivery Address</h5>
                          <div class="addressSection">
                     
                            <table class="table table-bordered   ">
                         
                             
                                  <tr>
                                <td>
                                <div class="container">
                                  <div class="row">
                                    <div class="col-12">
                                     
                                      <div class="firstLine ">      
                                        <p><%=orderId.name%></p>                 
                                      </div>
                                      <div class="firstLine">      
                                        <p> <%=orderId.address%> </p>                 
                                      </div>
                                      <div class="secondLine">
                                        <p> <%=orderId.locality%>,&nbsp;<%=orderId.city%>, &nbsp;<%=orderId.state%>, </p>
           
                                      </div>
                                      <div class="thirdLine">
                                        <p><%=orderId.pincode%>, &nbsp;Landmark : <%=orderId.landmark%>,</p>
                                      </div>
                                      <div class="fourthLine ">
                                        <p> <%=orderId.mobile%>, &nbsp;Alternative Mobile :<%=orderId.alterMobile%>, &nbsp;</p>
                                      </div>
                                    </div>
                                   
  
                                  </div>
                                </div>
                               
                              </td>
                            </tr>
                           
                              
                              
                             
                              
  
                            </table>
                                
                          
                    </div>
                          
                        </div>
                      </div>
                </div>
                <div class="col-6" style="display: flex; justify-content:center">
                    <div class="card w-75 mb-3">
                        <div class="card-body">
                          <h5 class="card-title">Order Info</h5>
                         
                          <table class="table" style="text-align: left;">
                       
                            <tbody>
                              <tr>
                                <th scope="row">Order Number</th>
                                <td>: <%=orderDetails.orderId%></td>
                          
                              </tr>
                              <tr>
                                <th scope="row">Order Date</th>
                                <td>: <%=orderDetails.orderDate.toLocaleDateString('en-US', { day: 'numeric', month: 'short', year: 'numeric' }) %></td>
                         
                              </tr>
                              <tr>
                                <th scope="row">Total</th>
                                <td>: <%=orderDetails.amount%></td>
                              
                              </tr>
                              <tr>
                                <th scope="row">Payment Method</th>
                                <td>: <%=orderDetails.payment%></td>
                              
                              </tr>
                            </tbody>
                          </table>
                          
                        </div>
                      </div>
                </div>
            </div>
        </div>
    </div>
    <div class="orderConfirmedBottom mt-5">
        <div class="card ">
            <div class="card-header">
              Order Details
            </div>
            <div class="card-body">
              <h5 class="card-title"></h5>
              <table class="table">
                <thead class="table-group-divider">
                  <tr>
                    <th scope="col">Product</th>
                    <th scope="col">Price</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Total</th>
                  </tr>
                </thead>
                <tbody class="table-group-divider">
                  <%if(productDetails.length>0)
                  {
                    for(let i=0;i<productDetails.length;i++)
                    {%>
                  <tr>
                    
                    <th scope="row"><%=productDetails[i].productName%></th>
                    <td><%=productDetails[i].productPrice%></td>
                    <td><%=orderDetails.productQuantity[i]%></td>
                    <td><%=orderDetails.productQuantity[i]*productDetails[i].productPrice%></td>

                  </tr>
                      <%
                    }
                  }%>
                </tbody>
                <tbody class="table-group-divider">
                    <tr>
                        <th scope="row" ></th>
                        <td>Sub Total</td>
                        <td></td>
                        <td><%=orderDetails.amount%></td>
                      </tr>
                      <tr>
                        <th scope="row"></th>
                        <td>Delivery Charge</td>
                        <td></td>
                        <td>0</td>
                      </tr>
                      <tr>
                        <th scope="row"></th>
                        <td>Total Amount</td>
                        <td></td>
                        <td><%=orderDetails.amount%></td>
                      </tr>

                </tbody>
                 
             
                
              </table >
              <a href="/home/home" class="btn btn-primary">Continue Shopping</a>
            </div>
            <div class="card-footer text-body-secondary">
              Will Deliver Soon...
            </div>
          </div>
    </div>
</div>
</section>





<!-- user logout -->

<script>
  document.getElementById('userLogout')
  .addEventListener('click',()=>{
   
    fetch('/home/logout',{
      method:'POST',
      headers: {
          "Content-Type": "application/json",
        },
    })
    .then((response) => response.json())
      .then((data) => {
        console.log(data)
        Swal.fire({
          title: "Logout Successfully !",
          icon: "success"
        })
        .then(() => {
          window.location.href = '/home';
          });
      })
      .catch((error)=>{
        console.log(error)
      })

  })
</script>


