<section>
  <div class="container mb-5">
    <a href="/admin/allProducts" class="btn btn-secondary mb-3 ms-5 ">Back</a>
      <div class="row">
          <div class="col-md-8 mx-auto">

              
              <h1  id="staticBackdropLabel">Edit <%=products.productName%></h1>

              <form action="/admin/editProducts" method="post" enctype="multipart/form-data">

                  <div class="mb-3 mt-5">
                      <input type="text" class="form-control" name="productName" placeholder="Product Name" id="ProductName" value="<%=products.productName%>">
                  </div>
                  <input type="hidden" name="productId" id="ProductId">
                  <div class="mb-3">
                      <select class="form-select" id="ProductCategory" name="productCategory" aria-label="<%=products.productCategory%>">
                        <% if(category.length>0) 
                        {
                            for(let i=0;i<category.length;i++)
                        {
                        %>

                        <option value="<%=category[i].categoryName%>"><%=category[i].categoryName%></option> 


                        <%
                        }
                         }
                        %>
                        
                      
                      </select>
                  </div>
                  <div class="mb-3">
                      <input type="number" class="form-control" name="productPrice" placeholder="Price" id="ProductPrice" value="<%=products.productPrice%>">
                  </div>
                  <div class="mb-3">
                      <input type="number" class="form-control" name="productQuantity" placeholder="Quantity" id="ProductQuantity" value="<%=products.productQuality%>">
                  </div>
                  <div class="mb-3">
                      <textarea class="form-control" name="productDescription" placeholder="Description" id="ProductDescription" rows="4"><%=products.productDescription%></textarea>
                  </div>
                  <div class="mb-3">
                      <img src="./images/adminpage/<%=products.productImage%>" alt="<%=products.productImage%>" class="img-fluid mb-2" style="max-height: 200px;">
                      <img src="./images/adminpage/<%=products.productImage%>" alt="<%=products.productImage%>" class="img-fluid mb-2" style="max-height: 200px;">
                      <img src="./images/adminpage/<%=products.productImage%>" alt="<%=products.productImage%>" class="img-fluid mb-2" style="max-height: 200px;">
                      
                      <input type="file" class="form-control" name="productImage" multiple>
                  </div>

                  <div class="modal-footer d-flex justify-content-center">
                      <button type="submit" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdropEditSuccess">Update</button>
                  </div>
              </form>

              <!-- Modal two-success start-->
              <div class="modal fade" id="staticBackdropEditSuccess" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                  <div class="modal-dialog modal-dialog-centered">
                      <div class="modal-content">
                          <div class="modal-body">
                              <div class="mb-3 row">
                                  <div class="col-sm-10">
                                      <div class="d-flex flex-wrap">
                                          <h4 class="text-success">Updated Successfully</h4>
                                      </div>
                                  </div>
                              </div>
                          </div>
                          <form action="/admin/allProducts">
                              <div class="modal-footer d-flex justify-content-center">
                                  <a href="" data-bs-toggle="modal"><button type="submit" class="btn btn-primary" data-bs-dismiss="modal">OK</button></a>
                              </div>
                          </form>
                      </div>
                  </div>
              </div>
              <!-- Modal two-success end-->

          </div>
      </div>
  </div>
</section>

