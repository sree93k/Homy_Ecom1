          <div class="col-md-8 mx-auto">

              <h1 class="modal-title" id="staticBackdropLabel">Edit <%=products.productName%></h1>
              <h5 class="productError text-danger "><%=productEditError%></h5>
              <form action="/admin/editProducts" method="post" enctype="multipart/form-data">
                  <div class="mb-3 mt-5">
                      <label for="productName" class="form-label">Product Name</label>
                      <input type="text" class="form-control" name="productName" placeholder="Product Name" id="ProductName" value="<%=products.productName%>">
                  </div>
                  <input type="hidden" name="productId" id="ProductId" value="<%=products._id%>">
                  <div class="mb-3">
                      <table class="table table-borderless">
                          <tr>
                              <td>
                                  <div class="mb-3">
                                    <input type="hidden" name="productId" id="ProductId">
                                      <label for="productCategory" class="form-label">Select Category</label>
                                      <select class="form-select" id="ProductCategory" name="productCategory" aria-label="<%=products.productCategory%>">
                                        <% if(category.length>0) 
                                        {
                                            for(let i=0;i<category.length;i++)
                                        {
                                        %>
                
                                        <option value="<%=category[i].categoryName%>"><%=category[i].categoryName%></option> 
                
                
                                        <%
                                        }
                                         }
                                        %>
                                        
                                      
                                      </select>
                                  </div>
                              </td>
              
                              <td>
                                  <div class="mb-3">
                                      <label for="productPrice" class="form-label">Price</label>
                                      <input type="number" class="form-control" name="productPrice" placeholder="Price" id="ProductPrice" value="<%=products.productPrice%>">
                                  </div>
                              </td>
              
                              <td>
                                  <div class="mb-3">
